APP_NAME="ModernWebShop Testing"
APP_ENV=testing
APP_KEY=
APP_DEBUG=true
APP_TIMEZONE=UTC
APP_URL=http://localhost

# Database Configuration for Testing
DB_CONNECTION=sqlite
DB_DATABASE=:memory:

# Query Performance Testing
TEST_LOG_QUERIES=false
TEST_SHOW_QUERY_SUMMARY=true
TEST_SLOW_QUERY_THRESHOLD=100
TEST_MAX_QUERY_COUNT=50
TEST_MAX_TOTAL_TIME=1000
TEST_N_PLUS_ONE_THRESHOLD=3
TEST_GENERATE_REPORTS=false
TEST_ENABLE_COMPARISON=false

# Cache & Queue for Testing
CACHE_DRIVER=array
QUEUE_CONNECTION=sync
SESSION_DRIVER=array

# Disable broadcasting in tests
BROADCAST_DRIVER=log

# Mail testing
MAIL_MAILER=array
